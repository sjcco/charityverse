
<div class="container-fluid p-0 vh-100">
<%= render "offcanvas" %>
  <div class="my-5 bg-white mx-4">
    <div class='row justify-content-center'>
      <div class="col-4 border-bottom border-secondary">
        <% if @group.nil? %>
          <%= image_tag "no_group.jpg", class: 'img-fluid my-4' %>
          <h3 class='text-center text-dark fs-2'>No group</h3>
        <% else %>
          <%= image_tag @group.icon, class: 'img-fluid my-4' %>
          <h3 class='text-center text-dark fs-2'><%= @group.name %></h3>
        <% end %>
      </div>
    </div>
    <h3 class="fs-1 text-center mt-5 light">Amount gathered</h3>
    <div class="row justify-content-center mt-3">
      <div class="col-4">
        <h4 class="bold text-center text-dark fs-2"><%= format("$%.2f", @charity.amount) %></h4>
      </div>
    </div>
    <h3 class="fs-1 text-center mt-5 light">last updated at</h3>
    <div class="row justify-content-center mt-3 pb-5">
      <div class="col-4 pb-5">
        <h4 class="bold text-center text-dark fs-2"><%= @charity.updated_at.strftime("%d %b %Y")%></h4>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mx-0">
    <div class="col-4 d-grid gap-2">
      <%= link_to "Update", edit_charity_path(@charity), class: 'text-decoration-none btn bg-green text-white fs-1 py-4' %>
    </div>
  </div>
  <div class="row justify-content-center mt-4 mx-0">
    <div class="col-4 d-grid gap-2">
      <%= link_to "Delete", charity_path(@charity), method: 'delete', data: {confirm: 'Are you sure?'}, class: 'text-decoration-none btn btn-danger text-white fs-1 py-4' %>
    </div>
  </div>
  
  

</div>