<div class="show">
<div class="w-25 mx-auto">
<%= image_tag "profile.jpg", class: 'rounded-circle img-fluid' %>
</div>
<div class="text-center text-white display-1 m-5 light"><%= current_user.name %></div>
<div class="container">
  <div class="row text-white my-5">
    <div class="col border border-3 rounded-circle border-light display-3 py-4 text-center">
      <i class="fas fa-hand-holding-heart"></i>
    </div>
    <div class="col-10 my-auto">
      <%= link_to "All my charities",
                  charities_path,
                  class: 'light d-block align-middle text-center text-white text-decoration-none fs-1 border-bottom border-light mx-5' %>
    </div>
  </div>

  <div class="row text-white my-5">
    <div class="col border border-3 rounded-circle border-light display-3 py-4 text-center">
      <i class="fas fa-people-carry"></i>
    </div>
    <div class="col-10 my-auto">
      <%= link_to "All my external charities",
                  externals_path,
                  class: 'light d-block align-middle text-center text-white text-decoration-none fs-1 border-bottom border-light mx-5' %>
    </div>
  </div>
  
  <div class="row text-white my-5">
    <div class="col border border-3 rounded-circle border-light display-3 py-4 text-center">
      <i class="fas fa-users"></i>
    </div>
    <div class="col-10 my-auto">
      <%= link_to "All groups",
                  groups_path,
                  class: 'light d-block align-middle text-center text-white text-decoration-none fs-1 border-bottom border-light mx-5' %>
    </div>
  </div>  
 
  <div class='row text-center'>
  <%= link_to logout_path, class: 'text-decoration-none text-white fs-1' do %>
    <i class="fas fa-sign-out-alt text-white fs-1 display-1 text-center col mt-5"></i>
  <% end %>
  </div>

  
    
  
  
</div>
</div> 